{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "tmp/tsreq",
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "JLTypes",
    "experimentalDecorators": true,
    "noImplicitUseStrict": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*/index", "common/client/*", "common/client/*/index"]
    },
    "lib": ["es2015", "dom"]
  },
  "compilerOptionsNotUsing": {
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "public",
    "www",
    "nglibs",
    "common/client",
    "dist",
    "ionic",
    "tmp",
    "*.bak",
    "JLTypes",
    "tools/",
    "mytest"
  ],
  "excludeNotUsing": [
  ]
}
