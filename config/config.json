{
  "appName": "qmtrip",
  "debug": false,

  "hostname": "my.tulingdao.com",
  "cluster": false,
  "port": 4002,
  "apiPort": 4102,
  "host": "http://${{hostname}}:${{port}}",
  "socket_file": null,
  "pid_file": "${{ROOT_DIR}}/tmp/server.pid",

  "logger": {
    "path": "${{ROOT_DIR}}/log",
    "prefix": "${{appName}}_",
    "httptype": "short",
    "mods": {
      "sequelize": { "prefix": "${{appName}}_sql_", "console": true },
      "http": { "console": false }
    }
  },
  "postgres":{
    "url": "postgres://postgres:root@localhost:5432/qmtrip",
    "debug": true
  },
  "redis":{
    "url": "redis://localhost:6379"
  },
  "hosts": {
    "main":{"addr":"api.local.tulingdao.com", "port":4101}
  },
  "upload":{
    "tmpDir": "${{ROOT_DIR}}/public/temp",
    "pubDir": "${{ROOT_DIR}}/public/upload"
  },
  "template":{
    "file": "${{ROOT_DIR}}/public/templatefile"
  },
  "api": {
    "postgres": "${{postgres.url}}",
    "remotes": [
      {
        "connect": {"host":"${{hosts.main.addr}}", "port":"${{hosts.main.port}}"},
        "modules": "*"
      }
    ]
  }
}