{
  "appName": "qmtrip",
  "debug": false,
  "ts_node": true,

  "hostname": "my.jingli.tech",
  "cluster": false,
  "port": 4002,
  "apiPort": 4102,
  "host": "//${{hostname}}:${{port}}",
  "socket_file": null,
  "pid_file": "${{ROOT_DIR}}/tmp/server.pid",

  "logger": {
    "path": "${{ROOT_DIR}}/log",
    "prefix": "${{appName}}_",
    "httptype": "short",
    "mods": {
      "sequelize": { "prefix": "${{appName}}_sql_", "console": false },
      "sqlinit": { "prefix": "${{appName}}_sql_", "console": false },
      "http": {
        "mods": {
          "access": { "console": false }
        }
      }
    }
  },
  "postgres":{
    "url": "postgres://postgres:root@localhost:5432/qmtrip",
    "url_test": "postgres://postgres:root@localhost:5432/qmtrip",
    "debug": true
  },
  "redis":{
    "url": "redis://localhost:6379"
  },
  "hosts": {
    "main":{"addr":"api.local.jingli.tech", "port":4101, "www":"https://${{hosts.main.addr}}"}
  },
  "upload":{
    "tmpDir": "${{ROOT_DIR}}/tmp/upload",
    "publicDir": "${{ROOT_DIR}}/www/attachments",
    "privateDir": "${{ROOT_DIR}}/tmp/files"
  },
  "template":{
    "file": "${{ROOT_DIR}}/public/templatefile"
  },
  "is_allow_domain_repeat": false,
  "api": {
    "postgres": "${{postgres.url}}",
    "remotes": [
      {
        "connect": {"host":"${{hosts.main.addr}}", "port":"${{hosts.main.port}}"},
        "modules": "*"
      }
    ]
  },
  "api_test": {
    "postgres": "${{postgres.url_test}}",
    "remotes": [
      {
        "connect": {"host":"${{hosts.main.addr}}", "port":"${{hosts.main.port}}"},
        "modules": "*"
      }
    ]
  },
